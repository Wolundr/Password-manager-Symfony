{% extends 'input.html.twig' %}

{% block title %}Reset Password{% endblock %}

{% block input_body %}

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
<div class="row justify-content-center align-items-center page-header text-nowrap text-center mt-4">
    <h1 class="">You are already <wbr> logged in!</h1>
</div>
<div class="row justify-content-center align-items-center">
    <div class="btn-group mt-5" role="group">
        <a href="{{ path('_index') }}" class="btn btn-primary font-weight-bold">Back to my list</a>
        <a  href="{{ path('fos_user_security_logout') }}" class="btn btn-primary font-weight-bold">Logout</a>
    </div>
</div>
{% else %}
    <div class="page-header mb-5"><h1>Reset password:</h1></div>

    {{ form_start(form) }}
    <div class="form-group row">
        <span for="username" class="col-sm-3 col-form-label">
        Username:
        </span>
        <div class="col-sm-9">
            {{ form_widget(form.username) }}
        </div>
    </div>

    <div class="form-group row">
        <span for="username" class="col-sm-3 col-form-label text-nowrap">
        New password:
        </span>
        <div class="col-sm-9">
            {{ form_widget(form.plainPassword.first) }}
        </div>
    </div>

    <div class="form-group row">
        <span for="username" class="col-sm-3 col-form-label text-nowrap">
        Repeat password:
        </span>
        <div class="col-sm-9">
            {{ form_widget(form.plainPassword.second) }}
        </div>
    </div>

    <div class=" btn-group float-right mt-3" role="group">
        <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary font-weight-bold">{{ 'Back to login'|trans({}, 'FOSUserBundle') }}</a>
        <input type="submit" class="btn btn-primary font-weight-bold float-right" value="{{ 'Submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
    {{ form_end(form) }}
{% endif %}

{% endblock input_body %}
