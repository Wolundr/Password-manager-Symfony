{% extends 'input.html.twig' %}

{% block title %}Edit password{% endblock %}

{% block input_body %}

    <div class="page-header mb-5"><h1>Edit password:</h1></div>

    {{ form_start(form) }}
    <div class="form-group row">
        <span for="username" class="col-sm-2 col-form-label">
        Name:
        </span>
        <div class="col-sm-10">
            {{ form_widget(form.name) }}
        </div>
    </div>

    <div class="form-group row">
        <span for="username" class="col-sm-2 col-form-label">
        Login:
        </span>
        <div class="col-sm-10">
            {{ form_widget(form.login) }}
        </div>
    </div>

    <div class="form-group row">
        <span for="username" class="col-sm-2 col-form-label">
        Password:
        </span>
        <div class="col-sm-10">
            {{ form_widget(form.password) }}
        </div>
    </div>

    <div class=" btn-group float-right" role="group">
        <a href="{{ path('_index') }}" class="btn btn-primary font-weight-bold">Back to the list</a>
        <input type="submit" value="Edit" class="btn btn-primary font-weight-bold float-right"/>
    </div>
    {{ form_end(form) }}

{% endblock input_body %}
