
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <div class="row justify-content-center align-items-center page-header text-nowrap text-center mt-4">
        <h1 class="">You are already <wbr> logged in!</h1>
    </div>
    <div class="row justify-content-center align-items-center">
        <div class="btn-group mt-5" role="group">
            <a href="{{ path('_index') }}" class="btn btn-primary font-weight-bold">Back to my list</a>
            <a  href="{{ path('fos_user_security_logout') }}" class="btn btn-primary font-weight-bold">Logout</a>
        </div>
    </div>
{% else %}
    <div class="page-header mb-5"><h1>Register:</h1></div>

    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
        <div class="form-group" id="fos_user_registration_form">

            <div class="form-group row">
    <span class="col-sm-2 col-form-label">
    Username:
    </span>
                <div class="col-sm-10">
                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'e.g. JohnDoe'|trans } }) }}
                </div>
            </div>


            <div class="form-group row">
    <span class="col-sm-2 col-form-label">
    Email:
    </span>
                <div class="col-sm-10">
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'e.g. jdoe@email.com'|trans } }) }}
                </div>
            </div>

            <div class="form-group row">
    <span class="col-sm-2 col-form-label">
    Password:
    </span>
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'e.g. ExTreMeLyStr0nGP@SSw0rdx33421'|trans } }) }}
                </div>
            </div>

            <div class="form-group row">
    <span class="col-sm-2 col-form-label">
    Confirm password:
    </span>
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'repeat the password'|trans } }) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <div class="row mt-3 mb-2 w-100">
                <div class="col-sm-12 pl-5">
                    {% if form_errors(form) %}
                        <div class="alert alert-danger ">
                            <strong>Warning!</strong>
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class=" btn-group float-right" role="group">
                <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary font-weight-bold">{{ 'Back to login'|trans({}, 'FOSUserBundle') }}</a>
                <input class="btn btn-primary font-weight-bold float-right" type="submit" value="{{ 'Sign up'|trans }}">
            </div>
    </form>
{% endif %}